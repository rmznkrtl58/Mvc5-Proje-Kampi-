@model EntityLayer.Concrete.Title
@{
    ViewBag.Title = "edittitle";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}


<h4 style="padding-top:10px;font-weight:bold">Başlık Güncelleme Sayfası:</h4>
@using (Html.BeginForm("edittitle", "Title", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TitleId)
    <div style="margin-top:15px">
        <label style="font-size:18px;font-weight:bold;color:#209d1f">Başlık Ad:</label>
        @Html.TextBoxFor(x => x.TitleName, new { @class = "form-control", @placeholder = "Başlık Adı" })
        @Html.ValidationMessageFor(x => x.TitleName)
    </div>
    <div style="margin-top:15px">
        <label style="font-size:18px;font-weight:bold;color:#209d1f">Başlık Tarih:</label>
        @Html.TextBoxFor(x => x.TitleDate, new { @class = "form-control", @placeholder = "Başlık Tarih" })
        @Html.ValidationMessageFor(x => x.WriterId)
    </div>
    <div style="margin-top:15px">
        <label style="font-size:18px;font-weight:bold;color:#209d1f">Yazar Id:</label>
        @Html.TextBoxFor(x => x.WriterId, new { @class = "form-control", @placeholder = "Yazar Id" })
        @Html.ValidationMessageFor(x => x.WriterId)
    </div>
    <div style="margin-top:8px">
        <label style="font-size:18px;font-weight:bold;color:#209d1f">Kategori Seçiniz...</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cd, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(x => x.cat)*@
    </div>
    <button style="margin-top:8px" class="btn btn-info">Güncelle</button>
}



