@using EntityLayer.Concrete
@model List<Title>
@{
    ViewBag.Title = "mytitlelist";
    Layout = "~/Views/Shared/_writerlayout.cshtml";
    string renk = " ";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklar</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Proje İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {

                            if (x.CategoryId == 6)
                            {
                                renk = "badge badge-warning";
                            }
                            if (x.CategoryId == 4)
                            {
                                renk = "badge badge-success";
                            }
                            if (x.CategoryId == 13)
                            {
                                renk = "badge badge-primary";
                            }
                            if (x.CategoryId == 7)
                            {
                                renk = "badge badge-info";
                            }
                            if (x.CategoryId == 3)
                            {
                                renk = "badge badge-danger";
                            }
                            <tr>
                                <td>
                                    @x.TitleId
                                </td>
                                <td>
                                    <a>
                                        @x.TitleName
                                    </a>
                                    <br />
                                    <small>
                                        @Convert.ToDateTime(x.TitleDate).ToString("dd/MM/yyyy")
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@x.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <span class="@renk">@x.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/UWriter/edittitle/@x.TitleId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/UWriter/titledelete/@x.TitleId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/UWriter/newtitle/@ViewBag.value" class="btn btn-success">Yeni Başlık</a>
            <!-- /.card-body -->
        </div>

        <!-- /.card -->
    </section>
</body>
</html>



