@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AdminInsert";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}

<h4 style="padding-top:15px;color:#d76615">Admin İşlemleri</h4>
<form method="post" class="form-group">
    <div style="margin-top:8px">
        <label>Kullanıcı Adı:</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
    </div>
    <div style="margin-top:8px">
        <label>Şifre:</label>
        @Html.TextBoxFor(x => x.PassWord, new { @class = "form-control", @placeholder = "Şifre" })
    </div>
    <div style="margin-top:8px">
        <label>Rol Değeri :</label>
        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control", @placeholder = "Rol" })
    </div>
    <button class="btn btn-success" style="margin-top:8px">Kaydet</button>
</form>

